<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="@dimen/adapter_item_size"
    android:layout_height="@dimen/adapter_item_size"
    android:layout_marginRight="1dp"
    android:background="@color/subject_selected"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/adapter_item_size"
        android:layout_height="@dimen/adapter_item_size"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/m5"
            android:text="MON"
            android:textAllCaps="true"
            android:textColor="@color/textColorBlue"
            android:textSize="@dimen/text_larg"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_date_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/m5"
            android:text="12th Aug 2017"
            android:textAllCaps="true"
            android:textColor="@color/textColorBlue"
            android:textSize="@dimen/text_very_small"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/colorWhite" />

</RelativeLayout>